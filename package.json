{
  "name": "com.sanjeet.wormhole",
  "displayName": "Wormhole",
  "version": "1.0.0",
  "description": "A sample Apache Cordova application that responds to the deviceready event.",
  "main": "index.js",
  "private": true,
  "homepage": "./",
  "dependencies": {
    "bootstrap": "^4.3.1",
    "cordova-android": "^7.1.4",
    "cordova-plugin-qrscanner": "^3.0.1",
    "cordova-plugin-whitelist": "^1.3.4",
    "ncp": "^2.0.0",
    "qrcode.react": "^0.9.3",
    "react": "^16.10.0",
    "react-bootstrap": "^1.0.0-beta.12",
    "react-dom": "^16.10.0",
    "react-redux": "^7.1.1",
    "react-router": "^5.1.1",
    "react-router-dom": "^5.1.1",
    "react-scripts": "3.1.2",
    "redux": "^4.0.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "build-cordova": "react-scripts build && npm run move",
    "move": "node scripts/copyBuild.js",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "showtime": "npm run build-cordova && cordova run android"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "cordova": {
    "plugins": {
      "cordova-plugin-whitelist": {},
      "cordova-plugin-qrscanner": {}
    },
    "platforms": [
      "android"
    ]
  },
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^5.11.2"
  }
}